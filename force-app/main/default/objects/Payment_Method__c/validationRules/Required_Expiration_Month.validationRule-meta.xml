<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Required_Expiration_Month</fullName>
    <active>false</active>
    <description>Expiration Month is required for charge cards</description>
    <errorConditionFormula>AND(ISBLANK(TEXT(Payment_Method_Status__c)), ISBLANK( Card_Expiration_Month__c ))</errorConditionFormula>
    <errorDisplayField>Card_Expiration_Month__c</errorDisplayField>
    <errorMessage>Expiration Month is required</errorMessage>
</ValidationRule>
