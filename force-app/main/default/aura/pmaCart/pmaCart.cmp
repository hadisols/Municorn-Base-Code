<aura:component
    implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickActionWithoutHeader"
    access="global" controller="ProductsController">
    <!-- <ltng:require styles="{!join(',', 
    $Resource.Bootstrap, 
    $Resource.FontAwesome + '/FontAwesome/css/all.css')}" afterScriptsLoaded="{!c.setup}" /> -->
    <aura:handler name="init" value="{!this}" action="{!c.onInit}" />
    
    <aura:attribute name="messageFromEvent" type="String"/>
    <aura:attribute name="selectedproducts" type="String" />
    <aura:attribute name="SelectedProductWrapper" type="ProductsController.SelectedProductWrapper[]" />
    <aura:attribute name="numEvents" type="Integer" default="0"/>

    <aura:handler event="c:posCommunicationEvent" action="{!c.handleApplicationEvent}"/>
    <aura:handler event="ltng:sendMessage" action="{!c.handleLtngSendMessageEvent}"/>
    <!--aeHandler has a handler registered for the component-level event, but will not receive -->

    <div style="border: 1px black solid">
        <p>aeHandler Component</p>
        <p>{!v.messageFromEvent}</p>
        <p>{!v.selectedproducts}</p>
        <p>Number of events: {!v.numEvents}</p>
    </div>
    
     <!--Start Bootstrap Cart markup-->
     <div class="slds-card my-2 sfappwrapper">
    <section class="h-100 h-custom">
        <div class="container py-1 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col">
                    <div class="card">
                        <div class="card-body p-4">

                            <div class="row">

                                <div class="col-lg-12">
                                    <h5 class="mb-3 text-body">Cart Items</h5>
                                    <hr/>
                                    <aura:if isTrue="{! !empty(v.SelectedProductWrapper)}">
<!-- 
                                    <div class="d-flex justify-content-between align-items-center mb-4">
                                        <div>
                                            <p class="mb-0">You have 4 items in your cart</p>
                                        </div>
                                    </div> -->
                                    <aura:iteration items="{!v.SelectedProductWrapper}" var="selectedproduct">
                                        <div class="card mb-3">
                                            <div class="card-body px-1 py-1">
                                                <div class="d-flex justify-content-between">
                                                    <div class="d-flex flex-row align-items-center">
                                                        <div class="ms-3">
                                                            <h5 class="slds-truncate">{!selectedproduct.product.Name}<span> x </span>{!selectedproduct.quantity}</h5>
                                                        </div>
                                                    </div>
                                                    <div class="d-flex flex-row align-items-center">
                                                        <!-- <div style="width: 50px;">
                                                            <h5 class="fw-normal mb-0">2</h5>
                                                        </div> -->
                                                        <div style="width: 80px;">
                                                            <h5 class="mb-0">$ <lightning:formattedNumber value="{!selectedproduct.totalProductPrice}" maximumFractionDigits="2" currencyCode="USD"/></h5>
                                                        </div>
                                                        <div class="slds-text-color_destructive">
                                                            <i class="fas fa-trash-alt"></i>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </aura:iteration>    
                                    

                                    </aura:if>


                                </div>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    </div>
    <!-- End Bootstrap Cart markup -->

</aura:component>